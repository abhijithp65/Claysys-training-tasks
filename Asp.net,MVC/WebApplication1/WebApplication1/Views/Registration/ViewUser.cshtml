@model WebApplication1.Models.UserModel

@{
    ViewBag.Title = "View User";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<div class="container">
    <h2>User Details</h2>

    <dl class="dl-horizontal">
        <dt>First Name:</dt>
        <dd>@Model.FirstName</dd>

        <dt>Last Name:</dt>
        <dd>@Model.LastName</dd>

        <dt>Date of Birth:</dt>
        <dd>@Model.DateOfBirth.ToShortDateString()</dd>

        <dt>Age:</dt>
        <dd>@Model.Age</dd>

        <dt>Gender:</dt>
        <dd>@Model.Gender</dd>

        <dt>Phone Number:</dt>
        <dd>@Model.PhoneNumber</dd>

        <dt>Email:</dt>
        <dd>@Model.Email</dd>

        <dt>Address:</dt>
        <dd>@Model.Address</dd>

        <dt>State:</dt>
        <dd>@Model.State</dd>

        <dt>City:</dt>
        <dd>@Model.City</dd>

        <dt>Username:</dt>
        <dd>@Model.Username</dd>

    </dl>

    <div>
        @Html.ActionLink("Back to Registration", "Index", null, new { @class = "btn btn-primary" })
    </div>
</div>
